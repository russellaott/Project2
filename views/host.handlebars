<div id="host-background">

<div class="jumbotron jumbotron-fluid" id="host-jumbo">
    <div class="container">
        <div class="row">
            <div class="col-md-12" id="ver-header-1">
                <h2 class="display-4" id="host-header">Host a Trip</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12" id="ver-header-2">
                <h4 class="lead ml-4">Enter the details about your trip</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-10">


        <div class="row mt-5 mx-3">
            <div class="col-md-6">
                <h6>Date of departure</h6>
            </div>
            <div class="col-md-3">
                <h6>Extra Seats</h6>
            </div>
            <div class="col-md-3">
                <h6>Smoking?</h6>
            </div>
        </div>

        <div class="row mt-3 mx-5">
            <div class="col-md-6" id="form-date">
                <div class="row">
                    <div class="col-md-4" id="form-month">
                <form>
                    <input class="form-control" type="number" name="month" min="1" max="12" id="host-dep-month" placeholder="MM">
                </form>
            </div>
            <div class="col-md-4" id="form-day">
                <form>
                    <input class="form-control" type="number" name="day" min="1" max="31" id="host-dep-day" placeholder="DD">
                </form>
            </div>
            <div class="col-md-4" id="form-year">
                <form>
                    <input class="form-control" type="number" name="year" min="1900" max="2018" id="host-dep-year" placeholder="YYYY">
                </form>
            </div>
                </div>
            </div>
            <div class="col-md-3" id="form-seats">
                 <form>
                    <input class="form-control" type="number" name="seats" id="host-seats">
                </form>
            </div>
             <div class="col-md-3" id="form-smoking">
                 <select name="smoking" class="form-control" id="host-smoking">
                            <option value="1">Allowed</option>
                            <option value="0">Not in my car</option>
                </select>
            </div>
        </div>

        <div class="row mt-5 mx-3">
            <div class="col-md-6">
                <h6>Leaving from...</h6>
            </div>
            <div class="col-md-6">
                <h6>Going to...</h6>
            </div>
        </div>

        <div class="row mt-3 mx-5">
            <div class="col-md-6">
                <div class="row">
                     <div class="col-md-8">
                    <form>
                        <input class="form-control" type="text" name="arr-city" id="host-dep-city" placeholder="City">
                    </form>
                </div>
                <div class="col-md-4">
                    <form>
                         <select name="states" class="form-control" id="host-dep-state">
                            {{#each states}}
                            <option value="{{abbreviation}}">{{abbreviation}}</option>
                            {{/each}}
                        </select>
                    </form>
                </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                     <div class="col-md-8">
                    <form>
                        <input class="form-control" type="text" name="arr-city" id="host-arr-city" placeholder="City">
                    </form>
                </div>
                <div class="col-md-4">
                    <form>
                         <select name="states" class="form-control" id="host-arr-state">
                            {{#each states}}
                            <option value="{{abbreviation}}">{{abbreviation}}</option>
                            {{/each}}
                        </select>
                    </form>
                </div>
                </div>
            </div>
        </div>

        <div class="row mt-5 mx-3">
            <div class="col-md-12">
                <h6>Trip Details</h6>
            </div>
        </div>

        <div class="row mt-3 mx-5">
            <div class="col-md-12">
                <textarea class="form-control" id="host-trip-details" rows="5" placeholder="Meeting spot, pit stops, meeting time, etc."></textarea>
            </div>
        </div>

        <div class="row mt-5">
            <button type="submit" class="btn-lg btn-block" id="host-submit">Submit Your Trip</button>
        </div>

</div>
<div class="col-md-1"></div>
</div>

    </div>
</div>



</div>